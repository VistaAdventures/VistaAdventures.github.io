@import url('https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap');
body
{
	margin:0;
	padding:0;
	box-sizing:border-box;
	
}
.zoom
{
	width:100%;
	height: 100%;
	position:relative;
	overflow:hidden;
	background-size:cover;
	background-image: url(bg.jpg);
	background-position:center;
	
	
	
}
.zoom:before
{
	content:'';
	position: absolute;
	bottom:100%;
	width:100%;
	height:200px;
	z-index:1000;
	background:linear-gradient(transparent,#fff);
}
.zoom #layer1
{
	position:absolute;
	left:40%;
	
	width:100%;
	transform:translateX(-50%);
	z-index:10;
}
.zoom #layer2
{
	position:absolute;
	
	right:0;
	width:100%;
	
	z-index:9;
}
.zoom #text
{
	position:absolute;
    right:0;
	width:100%;
	transform:translateY(50%);
	
}
.content h1
{
	padding:100px;
	box-sizing:border-box;
	font-family:consolas;
	font-style:'Arial';
	color:#104e8b ;
	font-size:4em;
}
.content p
{
	margin:0;
	padding:0;
	color:#104e8b ;
	font-size:1.2em;
	
}

.video-container
{
	
	background-size:cover;
	width:100%;
	height:100%;
	background-position:center;
	
	
}


